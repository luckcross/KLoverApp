<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KLoversApp.Views.Menu;assembly=KLoversApp"
             xmlns:detailviews="clr-namespace:KLoversApp.Views.DetailViews;assembly=KLoversApp"
             x:Class="KLoversApp.Views.Menu.MainPage">

    <MasterDetailPage.Master>
        <local:MainDetail x:Name="masterPage"/>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <detailviews:InfoScreen1 />
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
    
    
</MasterDetailPage>