<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KLoversApp.Views.Menu.Dashboard">
    <StackLayout VerticalOptions="FillAndExpand">
        <StackLayout x:Name="logoStack">
            <Label x:Name="lblNoInternet" HorizontalTextAlignment="Center" TextColor="White" BackgroundColor="Red"/>
        </StackLayout>
        
        <Label Text="Welcome" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Button Text="Screen 1" HorizontalOptions="Center" VerticalOptions="Center"
                Clicked="SelectedScreen1Async" />
    </StackLayout>
</ContentPage>